<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <OutputType>Library</OutputType>
    <AppDesignerFolder>Properties</AppDesignerFolder>
    <RootNamespace>HighQualityTextures</RootNamespace>
    <AssemblyName>HighQualityTextures</AssemblyName>
    <FileAlignment>512</FileAlignment>
    <Nullable>disable</Nullable>
    <!-- Automatische Erkennung von Quelldateien -->
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
  </PropertyGroup>

  <!-- Konfigurationen für Debug/Release -->
  <PropertyGroup Condition="'$(Configuration)|$(Platform)' == 'Debug|AnyCPU'">
    <Optimize>false</Optimize>
    <OutputPath>..\1.3\Assemblies\</OutputPath>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)' == 'Release|AnyCPU'">
    <Optimize>true</Optimize>
    <OutputPath>..\1.3\Assemblies\</OutputPath>
  </PropertyGroup>

  <!-- Referenzen -->
  <ItemGroup>
    <Reference Include="0Harmony">
      <HintPath>..\packages\Lib.Harmony.2.0.2\lib\net472\0Harmony.dll</HintPath>
    </Reference>
    <!-- Unity-Referenzen (gekürzt für Übersichtlichkeit) -->
    <Reference Include="Assembly-CSharp">
      <HintPath>..\..\..\RimWorldWin64_Data\Managed\Assembly-CSharp.dll</HintPath>
      <Private>False</Private>
    </Reference>
    <Reference Include="UnityEngine">
      <HintPath>..\..\..\RimWorldWin64_Data\Managed\UnityEngine.dll</HintPath>
      <Private>False</Private>
    </Reference>
    <!-- Weitere Unity-Module analog einfügen -->
  </ItemGroup>

  <!-- Quelldateien explizit auflisten (falls benötigt) -->
  <ItemGroup>
    <Compile Include="AssemblyInfo.cs" />
    <Compile Include="HighQualityTextures.cs" />
    <Compile Include="PatchModContentLoaderTexture2D.cs" />
  </ItemGroup>

  <!-- Packages.config durch PackageReference ersetzen -->
  <ItemGroup>
    <PackageReference Include="Lib.Harmony" Version="2.3.5" />
  </ItemGroup>
</Project>